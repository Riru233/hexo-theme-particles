                var timer = null;

                // Pjax ÂºÄÂßãÊó∂ÊâßË°åÁöÑÂáΩÊï∞
                document.addEventListener("pjax:send", function () {
                // ËøõÂ∫¶Êù°ÈªòËÆ§Â∑≤ÁªèÂä†ËΩΩ 20%
                var loadingBarWidth = 20;
                // ËøõÂ∫¶Êù°ÁöÑÊúÄÂ§ßÂ¢ûÂä†ÂÆΩÂ∫¶
                var MAX_LOADING_WIDTH = 95;

                // ÊòæÁ§∫ËøõÂ∫¶Êù°
                loadingBar.classList.add("loading");
                // ÂàùÂßãÂåñËøõÂ∫¶Êù°ÁöÑÂÆΩÂ∫¶
                progress.style.width = loadingBarWidth + "%";

                clearInterval(timer);
                timer = setInterval(function () {
                    // ËøõÂ∫¶Êù°ÁöÑÂ¢ûÂä†ÈÄüÂ∫¶ÔºàÂèØ‰ª•Êîπ‰∏∫‰∏Ä‰∏™ÈöèÊú∫ÂÄºÔºåÊòæÂæóÊõ¥Âä†ÁúüÂÆûÔºâ
                    loadingBarWidth += 3;

                    // ÂΩìËøõÂ∫¶Êù°Âà∞Ëææ 95% ÂêéÂÅúÊ≠¢Â¢ûÂä†
                    if (loadingBarWidth > MAX_LOADING_WIDTH) {
                    loadingBarWidth = MAX_LOADING_WIDTH;
                    }

                    progress.style.width = loadingBarWidth + "%";
                }, 500);
                });

                // Pjax ÂÆåÊàê‰πãÂêéÊâßË°åÁöÑÂáΩÊï∞
                document.addEventListener("pjax:complete", function () {
                clearInterval(timer);
                progress.style.width = "100%";
                loadingBar.classList.remove("loading");

                setTimeout(function () {
                    progress.style.width = 0;
                }, 400);
                });
        </script>
