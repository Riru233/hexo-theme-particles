<% var current=(page.current-1)*config.index_generator.per_page; var rootlink=config.root; %>
    <!-- <div id="aplayer-vubJZXpE" class="aplayer post aplayer-tag-marker meting-tag-marker" data-id="6926288074"
        data-server="netease" data-type="playlist" data-mode="circulation" data-autoplay="true" data-mutex="false"
        data-listmaxheight="299px" data-preload="none" data-theme="#fbcdd6" data-listfolded="true"
        style="padding: 10px 10px;background-color: rgb(243, 243, 243);"></div> -->

    <% site.posts.slice(0,20).forEach(function(post){ %>
        <div class="post" style="background-image: url('<%- page.bgpath %><%- post.bgpath %>');">
            <div class="linear hove" style="height:100%;width:100%;border-radius: 20px;">
                <a onclick="window.location.href='<%- rootlink %><%- post.path %>'" style="cursor: pointer">
                    <h2>
                        <%- post.title %>
                    </h2>
                </a>

                <div class="category-and-date">

                    <% if(post.categories.data.length!=0){ %>
                        <span class="category">
                            <a href="<%- rootlink %>categories/<%= post.categories.data[0].name.replace(" ", " -") %>">
                                <i aria-label="icon: book" class="anticon anticon-book"><svg viewBox="64 64 896 896" data-icon="book" width="1em" height="1em" fill="currentColor" aria-hidden="true" focusable="false" class=""><path d="M832 64H192c-17.7 0-32 14.3-32 32v832c0 17.7 14.3 32 32 32h640c17.7 0 32-14.3 32-32V96c0-17.7-14.3-32-32-32zm-260 72h96v209.9L621.5 312 572 347.4V136zm220 752H232V136h280v296.9c0 3.3 1 6.6 3 9.3a15.9 15.9 0 0 0 22.3 3.7l83.8-59.9 81.4 59.4c2.7 2 6 3.1 9.4 3.1 8.8 0 16-7.2 16-16V136h64v752z"></path></svg></i>
                                <%- post.categories.data[0].name %>
                            </a>
                        </span>
                        <% } %>

                            <span class="date">
                                <span class="icon">
                                    <i aria-label="icon: calendar" class="anticon anticon-calendar"><svg viewBox="64 64 896 896" data-icon="calendar" width="1em" height="1em" fill="currentColor" aria-hidden="true" focusable="false" class=""><path d="M880 184H712v-64c0-4.4-3.6-8-8-8h-56c-4.4 0-8 3.6-8 8v64H384v-64c0-4.4-3.6-8-8-8h-56c-4.4 0-8 3.6-8 8v64H144c-17.7 0-32 14.3-32 32v664c0 17.7 14.3 32 32 32h736c17.7 0 32-14.3 32-32V216c0-17.7-14.3-32-32-32zm-40 656H184V460h656v380zM184 392V256h128v48c0 4.4 3.6 8 8 8h56c4.4 0 8-3.6 8-8v-48h256v48c0 4.4 3.6 8 8 8h56c4.4 0 8-3.6 8-8v-48h128v136H184z"></path></svg></i>
                                </span>
                                <%- date(post.date, 'YYYY/M/D' ) %>
                            </span>

                </div>

                <div class="excerpt">
                    <div class="content" v-pre>
                        <% if(post.excerpt.length !=0){ %>
                            <%- post.excerpt %>
                                <% } %>
                                    <% if(post.desc!=0){ %>
                                        <%- post.desc %>
                                            <% } %>
                    </div>
                </div>

                <div class="post-tags">
                    <% if(post.tags.data.length!=0){ %>
                        <% } %>
                            <% post.tags.data.forEach(function(data){%>
                                <span class="tag">
                                    <% if(theme.style=="night" ){ var color=['color:#607d8b', 'color:#6484be'
                                        , 'color:#006674' ,'color:#016a99'] }else if(theme.style=="maiden" ){ var
                                        color=['color:#ffa2c4', 'color:#00bcd4' , 'color:#879cff' , 'color:#1bccbc'
                                        , 'color:#ff7d73' ]; }else{ var color=['color:#ffa2c4', 'color:#00bcd4'
                                        , 'color:#03a9f4' , 'color:#00a596' , 'color:#ff7d73' ]; } var
                                        num=Math.floor(Math.random()*color.length); %>
                                        <a href="<%- rootlink %>tags/<%= data.name.replace(" ", " -") %>" style=<%-
                                                color[num] %>>
                                                <%- data.name %>
                                        </a>
                                </span>
                                <% }) %>
                </div>
            </div>
        </div>
        <% }); %>
            <div class="post" style="padding:10px 10px;font-size:18px;text-align: center;">
                <a href="/archives" style="padding:10px 10px;">点击此处查看更多博客文章</a>
            </div>