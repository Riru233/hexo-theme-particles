<!--程序:时间组件-->
<div class="notify-style timedate ant-card ant-card-bordered">
    <div class="ant-card-body">
        <div id="bjtime" style="font-weight:lighter;font-size:50px"></div>
        <div id="bjdate" style="font-size:20px"></div>
    </div>
</div>
<!--程序:个人信息-->
<div class="card-style ant-card ant-card-bordered" id="profileinfo">
    <div class="ant-card-body">
        <div class="avatar">
            <img src="<%- theme.head_img %> " alt="头像">
        </div>
        <div class="name">
            <%- config.author %>
        </div>
        <div class="descriptions">
            <% theme.card.description.forEach(function(desc){ %>
                <div class="description">
                    <%- desc %>
                </div>
                <% }) %>
        </div>
        <div class="icon-links">
            <% Object.keys(theme.card.icon_links).forEach(function(key){ %>
                <span class="icon-link">
                    <a href="<%- theme.card.icon_links[key].link %>">
                        <svg viewBox="<%- theme.card.icon_links[key].icon.viewBox %>" width="<%- theme.card.icon_links[key].icon.width %>" height=<%- theme.card.icon_links[key].icon.height %> fill="currentColor" aria-hidden="true" focusable="false"><path d="<%- theme.card.icon_links[key].icon.data %>"></path></svg>
                    </a>
                </span>
                <% }) %>
        </div>
    </div>
</div>

<!--程序:相关链接-->
<div class="card-style ant-card ant-card-bordered" id="fr-link">
    <div class="ant-card-body">
        <div class="name">
            友情链接
        </div>
        <div class="friend-links" style="overflow-y: scroll;height:200px;">
            <% Object.keys(theme.card.friend_links).forEach(function(key){ %>
                <div class="friend-link">
                    <a href="<%- theme.card.friend_links[key] %>">
                        <%- key %>
                    </a>
                </div>
                <% }) %>
        </div>
    </div>
</div>

<script>
    function getTime1() {
        var date = new Date();
        var hour = date.getHours(); //获取小时
        hour = hour < 10 ? '0' + hour : hour;
        var minute = date.getMinutes(); // 获取分
        minute = minute < 10 ? '0' + minute : minute;
        var seconds = date.getSeconds(); //获取秒
        seconds = seconds < 10 ? '0' + seconds : seconds;
        return hour + ':' + minute + ':' + seconds;
    };
    function getTime2() {
        var date = new Date();
        var year = date.getFullYear(); //获取年份
        var month = date.getMonth() + 1; //获取月份
        var day = date.getDate(); //获取日期
        return year + '年' + month + '月' + day + '日&nbsp;';
    };
    setInterval(function() {
        document.querySelector('#bjtime').innerHTML = getTime1();
        document.querySelector('#bjdate').innerHTML = getTime2();
    }, 1000);
</script>

