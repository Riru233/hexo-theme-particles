<div id="home-head" style=<%- theme.home_background %>>
    <script>
        var menu = document.getElementById("menu")
        menu.className += " menu-color"
    </script>
    <script type="text/javascript">
        function FadeOutLinkClick() {
        var frame = document.getElementById("FadeOutDivFrame");
        frame.className = "curtain";
        }        
        function FadeInLinkClick() {          
        var frame = document.getElementById("FadeInDivFrame");
        frame.className = "curtain";
        }
    </script>
    <div id="home-info" class="home-info" @click="home_click">
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="info">
            <div class="wrap">
                <div class="head-color" style="font-size: 50px;font-weight: lighter;"><%- config.title %></div>
                <div class="head-color" style="font-size: 30px;font-weight: lighter;"><%- config.subtitle %></div>
                <div class="head-color" style="font-size: 18px;font-weight: lighter;"><%- config.description %></div>
            </div>
        </span>
    </div>
</div>

<div id="fancycard" class="quickcard btncard-hide" style="position: fixed;z-index: 999;">
    <%- include("_partial/card") %>
</div>
<% 
    var wrapClass = ""
    if(!theme.card.enable){
        wrapClass = "home-posts-wrap-no-card"
    } 
%>
<div id="home-posts-wrap" class=<%- wrapClass %>>
    
    <div id="home-posts">
        <div id="posts">
            <%- include("_partial/posts") %>
            <%- include("_partial/current") %>
        </div>
    </div>
</div>
