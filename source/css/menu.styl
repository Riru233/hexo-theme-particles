.slide-enter-active,
.slide-leave-active {
    transition: margin-top 0.3s, opacity 0.3s;
}
.slide-enter-from,
.slide-leave-to {
    margin-top: -900px;
    opacity: 0;
}

#menu
    user-select none
    z-index 105
    position fixed
    width 100%
    line-height 50px
    transition top 0.5s ease-out
    background menu-default-background
    box-shadow 0px -1px 10px 0px #9e9e9e4d
    top 0

    .desktop-menu
        height 50px
        margin-left 20px
        .title
            display inline-block
            margin-left 10px
            margin-right 10px
            font-family default-font-family
            font-weight lighter
            color menu-default-font
        a
            display inline-block
            font-weight lighter
            padding 0px 15px
            text-decoration none
            color menu-default-font
            transition all 0.3s ease-out
            &:hover
                background rgba(194, 194, 194, 0.458)
                border-radius 50px
            span
                display inline-block
                position relative

                img
                    position relative
                    top 3px
                    width 20px
                    height 20px

                &:nth-child(1)
                    margin-right 5px
            .local-search-plugin
                .local-search-input-cls
                    width 160px

    .phone-menu
        font-weight lighter
        min-height 50px
        text-align center
        .title
            color menu-default-font

        .items
            padding 10px 0 20px
            z-index 104
            a
                color menu-default-font
            .item
                min-width 200px
                width 80%
                margin auto
                display -webkit-box
                display -webkit-flex
                display -moz-box
                display -ms-flexbox
                display flex
                justify-content center
                transition all 0.3s ease-out
                &:hover
                    background #b6b6b67c
                    border-radius: 20px
                .local-search-plugin
                    .local-search-input-cls
                        width auto
.hidden-menu
    top -70px !important
    transition: all 0.5s ease-out
    
.menu-color
    background menu-index-background !important
    box-shadow 0px -1px 10px 0px #ffffff00 !important
    .false
        background #00000033

    .true
        background #0009 !important

    .title, a
        color menu-index-font !important
